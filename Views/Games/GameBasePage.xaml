<Page
    x:Class="SGSClient.Views.GameBasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:SGSClient.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:SGSClient.Models"
    xmlns:helpers="using:SGSClient.Helpers"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never">

    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAGŁÓWEK (grafika + dane + akcje) -->
        <Grid Grid.Row="0" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" Margin="0,0,0,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>
            <!-- Logo gry -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="140" Height="140" Background="#282828" CornerRadius="20">
                    <Image Source="{Binding GameLogo.ImageSource}" Width="120" Height="120" Margin="10"/>
                </Border>
            </StackPanel>
            <!-- Dane gry -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="21,0,0,0">
                <TextBlock Text="{Binding GameName}" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="{Binding GameDeveloper}" FontSize="16" Foreground="LightGray"/>
                </StackPanel>
                <TextBlock Text="{Binding GameDescription}" FontSize="15" Margin="0,10,0,0" Foreground="White" TextWrapping="Wrap" MaxHeight="85" MaxWidth="19200"
           TextTrimming="CharacterEllipsis"/>

            </StackPanel>
            <!-- Panel akcji -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0">
                <ProgressBar x:Name="DownloadProgressBorder" Width="130" Margin="15" IsIndeterminate="True" ShowError="False" ShowPaused="False" />

                <Button x:Name="PlayButton" Click="PlayButton_Click" Content="Graj" Width="155" Height="42" Margin="0,0,0,15" Style="{StaticResource AccentButtonStyle}"/>
                <Button x:Name="CheckUpdateButton" Click="UpdateButton_Click" Content="Aktualizuj" Width="155" Height="40" Margin="0,0,0,10"/>
                <Button x:Name="UninstallButton" Content="Odinstaluj" Width="155" Height="40">
                    <Button.Flyout>
                        <Flyout x:Name="uninstallFlyout">
                            <StackPanel>
                                <TextBlock Margin="0,0,0,12" Style="{ThemeResource BaseTextBlockStyle}" Text="Ta aplikacja i powiązane z nią informacje zostaną odinstalowane." />
                                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Click="UninstallButton_Click" Content="Odinstaluj" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>

        <!-- CAŁA ZAWARTOŚĆ (karty sekcji na całą szerokość) -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>

                <!-- Zrzuty ekranu -->
                <ScrollViewer Margin="18,6" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Visible" VerticalScrollMode="Disabled">
                    <ItemsRepeater ItemsSource="{Binding GameImages}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="10"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" Margin="5">
                                    <Image Source="{Binding ImageSource}" Stretch="UniformToFill" Width="300" Height="200"/>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <!-- Opis gry -->
                <Border Margin="18,6" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}" CornerRadius="13">
                    <StackPanel>
                        <TextBlock Text="Opis" FontSize="21" FontWeight="SemiBold" Margin="16,12,0,4"/>
                        <Rectangle Height="1" Fill="{ThemeResource ControlElevationBorderBrush}" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding GameDescription}" FontSize="16" Margin="13,0,13,15" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Wymagania sprzętowe -->
                <Border Margin="18,6" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}" CornerRadius="13"
                        Visibility="{Binding IsHardwareRequirementsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Wymagania systemowe" FontSize="21" FontWeight="SemiBold" Margin="16,12,0,4"/>
                        <Rectangle Height="1" Fill="{ThemeResource ControlElevationBorderBrush}" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding HardwareRequirements}" FontSize="15" Margin="12,0,12,14"/>
                    </StackPanel>
                </Border>

                <!-- Pozostałe informacje -->
                <Border Margin="18,6" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}" CornerRadius="13"
                        Visibility="{Binding IsOtherInformationsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Pozostałe informacje" FontSize="21" FontWeight="SemiBold" Margin="16,12,0,4"/>
                        <Rectangle Height="1" Fill="{ThemeResource ControlElevationBorderBrush}" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding OtherInformations}" FontSize="15" Margin="12,0,12,14"/>
                    </StackPanel>
                </Border>

                <!-- DLC -->
                <Border Margin="18,6" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}" CornerRadius="13"
                        Visibility="{Binding IsDLCVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="DLC" FontSize="21" FontWeight="SemiBold" Margin="16,12,0,4"/>
                        <Rectangle Height="1" Fill="{ThemeResource ControlElevationBorderBrush}" Margin="0,0,0,12"/>
                        <!-- Tutaj lista DLC -->
                    </StackPanel>
                </Border>

                <!-- Oceny i recenzje -->
                <Border Margin="18,6" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}" CornerRadius="13">
                    <StackPanel>
                        <TextBlock Text="Oceny i recenzje" FontSize="21" FontWeight="SemiBold" Margin="16,12,0,6"/>
                        <Rectangle Height="1" Fill="{ThemeResource ControlElevationBorderBrush}" Margin="0,0,0,12"/>
                        <Grid Margin="17,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Średnia ocena -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,17,0">
                                <TextBlock Text="{Binding AvgRating}" FontSize="40" FontWeight="Bold" Margin="0,0,0,2"/>
                                <TextBlock>
                                    <Run Text="OCENY: "/>
                                    <Run Text="{Binding RatingCount}"/>
                                </TextBlock>
                            </StackPanel>
                            <!-- Rozkład ocen -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="5" Width="22"/>
                                    <ProgressBar Value="{Binding Count5}" Height="13" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="4" Width="22"/>
                                    <ProgressBar Value="{Binding Count4}" Height="13" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="3" Width="22"/>
                                    <ProgressBar Value="{Binding Count3}" Height="13" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="2" Width="22"/>
                                    <ProgressBar Value="{Binding Count2}" Height="13" Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="1" Width="22"/>
                                    <ProgressBar Value="{Binding Count1}" Height="13" Width="200"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <!-- Lista recenzji -->
                        <ListView ItemsSource="{x:Bind ViewModel.Ratings}" Margin="15,3,15,10">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:GameRating">
                                    <StackPanel Margin="0,0,0,11">
                                        <TextBlock FontSize="16" FontWeight="Bold" Text="{x:Bind Title}" />
                                        <RatingControl Value="{x:Bind Rating}" IsReadOnly="True"/>
                                        <TextBlock FontSize="14" Text="{x:Bind Review}" Margin="0,2,0,0"/>
                                        <TextBlock FontSize="12" Foreground="Gray" Text="{x:Bind Author}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <HyperlinkButton Content="Wyświetl wszystko" HorizontalAlignment="Left" Margin="12,0,0,13"
                                         Click="ShowAllReviewsButton_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
