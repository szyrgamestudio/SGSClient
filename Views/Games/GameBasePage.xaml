<Page
    x:Class="SGSClient.Views.GameBasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:SGSClient.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    xmlns:local="using:SGSClient.Models"
    xmlns:helpers="using:SGSClient.Helpers"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel
        Grid.Column="0"
        Width="300"
        Height="Auto"
        Margin="5"
        Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
        BorderThickness="0.5"
        CornerRadius="5">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <!--  0 - Ikona Gry  -->
                        <RowDefinition Height="Auto" />
                        <!--  1 - Nazwa Gry  -->
                        <RowDefinition Height="Auto" />
                        <!--  2 - Autor  -->
                        <RowDefinition Height="40px" />
                        <!--  3 - ProgressBar  -->
                        <RowDefinition Height="Auto" />
                        <!--  4 - Przycisk Graj  -->
                        <RowDefinition Height="Auto" />
                        <!--  5 - Przycisk aktualizuj  -->
                        <RowDefinition Height="Auto" />
                        <!--  6 - Przycisk Odinstaluj  -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  0 - Ikona Gry  -->
                    <Border Grid.Row="0" Padding="0,20,0,0">
                        <Image
                Grid.Row="0"
                Width="150"
                Height="150"
                HorizontalAlignment="Center"
                x:Name="GameLogoImage"
                Source="{Binding GameLogo, Converter={StaticResource StringToImageSourceConverter}}" />
                    </Border>

                    <!--  1 - Nazwa Gry  -->
                    <TextBlock
              Grid.Row="1"
              HorizontalAlignment="Center"
              FontSize="24"
              Style="{StaticResource TitleTextBlockStyle}"
              x:Name="GameNameTextBlock"
              Text="{Binding GameName}">
                    </TextBlock>

                    <!--  2 - Autor  -->
                    <TextBlock
              Grid.Row="2"
              Padding="0,10,0,0"
              HorizontalAlignment="Center"
              FontSize="11"
              Style="{StaticResource BodyStrongTextBlockStyle}"
              x:Name="GameDeveloperTextBlock"
              Text="{Binding GameDeveloper}">
                    </TextBlock>

                    <!--  3 - ProgressBar  -->
                    <ProgressBar
              x:Name="DownloadProgressBorder"
              Grid.Row="3"
              Width="130"
              Margin="15"
              IsIndeterminate="True"
              ShowError="False"
              ShowPaused="False" />

                    <!--  4 - Przycisk Graj  -->
                    <StackPanel
              Grid.Row="4"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
                        <Button
                x:Name="PlayButton"
                Width="100"
                Click="PlayButton_Click"
                ClickMode="Press"
                Content="Graj"
                Style="{StaticResource AccentButtonStyle}" />
                        
                    </StackPanel>

                    <!--  5 - Przycisk aktualizuj  -->
                    <StackPanel
              Grid.Row="5"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
                        <Button
                x:Name="CheckUpdateButton"
                Width="100"
                Margin="0,5,0,0"
                Click="UpdateButton_Click"
                Content="Aktualizuj"
                Style="{StaticResource AccentButtonStyle}" />
                    </StackPanel>

                    <!--  6 - Przycisk odinstaluj  -->
                    <StackPanel
              Grid.Row="6"
              Margin="0,10,0,0"
              HorizontalAlignment="Center"
              VerticalAlignment="Bottom">

                        <Button
                x:Name="UninstallButton"
                Width="100"
                Content="Odinstaluj">
                            <Button.Flyout>
                                <Flyout x:Name="uninstallFlyout">
                                    <StackPanel>
                                        <TextBlock
                        Margin="0,0,0,12"
                        Style="{ThemeResource BaseTextBlockStyle}"
                        Text="Ta aplikacja i powiązane z nią informacje zostaną odinstalowane." />
                                        <Button
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="UninstallClickButton"
                        Content="Odinstaluj" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>

                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
            Grid.Row="0"
            Margin="5"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            BorderThickness="0.5"
            CornerRadius="5">
                    <TextBlock
              Margin="5"
              Padding="5"
              FontSize="20"
              Style="{ThemeResource BodyStrongTextBlockStyle}"
              Text="Zrzuty ekranu" />
                    <Rectangle
              Height="1"
              HorizontalAlignment="Stretch"
              Fill="{ThemeResource ControlElevationBorderBrush}" />
                    <FlipView
    x:Name="GameGallery"
    ItemsSource="{x:Bind ViewModel.GameImages, Mode=OneWay}"
    Height="230"
    MaxWidth="400"
    Margin="5"
    HorizontalAlignment="Left">
                        <FlipView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding UriSource}" Stretch="Uniform"/>
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>
                </StackPanel>
                <StackPanel
            Grid.Row="1"
            Margin="5"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            BorderThickness="0.5"
            CornerRadius="5">
                    <TextBlock
              Margin="5"
              Padding="5"
              FontSize="20"
              Style="{ThemeResource BodyStrongTextBlockStyle}"
              Text="Opis" />
                    <Rectangle
              Height="1"
              HorizontalAlignment="Stretch"
              Fill="{ThemeResource ControlElevationBorderBrush}" />
                    <TextBlock
              Margin="5"
              Padding="5"
              HorizontalAlignment="Left"
              FontSize="14"
              Style="{ThemeResource CaptionTextBlockStyle}"
              x:Name="GameDescriptionTextBlock"
              Text="{Binding GameDescription}">
                    </TextBlock>
                </StackPanel>
                <!--Wymagania-->
                <StackPanel
            Grid.Row="2"
            Margin="5"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            BorderThickness="0.5"
            CornerRadius="5"
            x:Name="reqStackPanel"
            Visibility="{Binding IsHardwareRequirementsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
            >
                    <TextBlock
              Margin="5"
              Padding="5"
              FontSize="20"
              Style="{ThemeResource BodyStrongTextBlockStyle}"
              Text="Wymagania systemowe" />
                    <Rectangle
              Height="1"
              HorizontalAlignment="Stretch"
              Fill="{ThemeResource ControlElevationBorderBrush}" />
                    <TextBlock
              Margin="5"
              Padding="5"
              FontSize="14"
              Style="{ThemeResource CaptionTextBlockStyle}"
              x:Name="HardwareRequirementsTextBlock"
              Text="{Binding HardwareRequirements}">
                    </TextBlock>
                </StackPanel>

                <!--Pozostałe info-->
                <StackPanel
            Grid.Row="3"
            Margin="5"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            BorderThickness="0.5"
            CornerRadius="5"
            x:Name="OtherInformationsStackPanel"
                    Visibility="{Binding IsOtherInformationsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
              Margin="5"
              Padding="5"
              FontSize="20"
              Style="{ThemeResource BodyStrongTextBlockStyle}"
              Text="Pozostałe informacje"
              />
                    <Rectangle
              Height="1"
              HorizontalAlignment="Stretch"
              Fill="{ThemeResource ControlElevationBorderBrush}" />
                    <TextBlock
              Margin="5"
              Padding="5"
              FontSize="14"
              Style="{ThemeResource CaptionTextBlockStyle}"
              x:Name="OtherInformationsTextBlock"
              Text="{Binding OtherInformations}">
                    </TextBlock>
                </StackPanel>
                <!--Comments-->
                <StackPanel Grid.Row="4" Margin="5" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}" BorderBrush="{ThemeResource ControlElevationBorderBrush}" BorderThickness="0.5" CornerRadius="5" x:Name="ReviewsStackPanel">
                    <Grid Margin="5" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" Style="{ThemeResource BodyStrongTextBlockStyle}" Text="Oceny i recenzje" VerticalAlignment="Center" />
                        <Button x:Name="AddReviewButton" Grid.Column="1" Click="AddRatingButton_Click" HorizontalAlignment="Right" Style="{StaticResource AccentButtonStyle}">
                            <Button.Content>
                                <FontIcon Glyph="&#xE734;" />
                            </Button.Content>
                            <ToolTipService.ToolTip>
                                <ToolTip Content="Oceń"/>
                            </ToolTipService.ToolTip>
                        </Button>
                    </Grid>
                    <Rectangle Height="1" HorizontalAlignment="Stretch" Fill="{ThemeResource ControlElevationBorderBrush}" />
                    <Grid Margin="5" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Ocena ogólna i liczba ocen -->
                        <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontSize="40" Text="{Binding AvgRating}" FontWeight="Bold" HorizontalAlignment="Left" Margin="5" />
                            <TextBlock Grid.Row="1" FontSize="14" HorizontalAlignment="Left">
                                 <Run Text="OCENY: " />
                                 <Run Text="{Binding RatingCount}" />
                            </TextBlock>
                        </Grid>

                        <!-- Wskaźniki ocen -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="5" Width="20" />
                                <ProgressBar Value="{Binding Count5}" Height="10" Width="200" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="4" Width="20" />
                                <ProgressBar Value="{Binding Count4}" Height="10" Width="200" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="3" Width="20" />
                                <ProgressBar Value="{Binding Count3}" Height="10" Width="200" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="2" Width="20" />
                                <ProgressBar Value="{Binding Count2}" Height="10" Width="200" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="1" Width="20" />
                                <ProgressBar Value="{Binding Count1}" Height="10" Width="200" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <StackPanel Margin="5" Padding="5">
                        <!-- Recenzja -->
                        <ListView x:Name="CommentsListView" ItemsSource="{x:Bind ViewModel.Ratings}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:GameRating">
                                    <StackPanel>
                                        <!-- Title of the review -->
                                        <TextBlock FontSize="16" FontWeight="Bold" Text="{x:Bind Title}" />

                                        <!-- Rating value -->
                                        <RatingControl HorizontalAlignment="Left" IsReadOnly="True" PlaceholderValue="{x:Bind Rating}" />

                                        <!-- Review content -->
                                        <TextBlock FontSize="14" Text="{x:Bind Review}" />

                                        <!-- Author -->
                                        <TextBlock FontSize="12" Text="{x:Bind Author}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <HyperlinkButton Content="Wyświetl wszystko" HorizontalAlignment="Left" Click="ShowAllReviewsButton_Click" />
                    </StackPanel>
                </StackPanel>

            </Grid>
        </ScrollViewer>
        <ContentDialog
    x:Name="AddRatingDetailsDialog"
    Title="Oceń"
    PrimaryButtonText="Oceń"
    CloseButtonText="Zamknij"
    PrimaryButtonClick="AddRatingButton_Click"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}">

            <StackPanel>
                <!-- TextBox for entering the title of the rating -->
                <TextBox
            x:Name="RatingTitleTextBox"
            Header="Tytuł oceny"
            TextWrapping="Wrap"
            Height="60"
            Margin="0,0,0,10"/>

                <!-- RatingControl for the rating value -->
                <RatingControl
            x:Name="RatingRatingControl"
            HorizontalAlignment="Left"
            ValueChanged="RatingRatingControl_ValueChanged"
            Margin="0,0,0,10" />

                <!-- TextBox for entering the content of the rating -->
                <TextBox
            x:Name="RatingReviewTextBox"
            Header="Treść oceny"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            Height="200"/>
            </StackPanel>
        </ContentDialog>

    </Grid>

</Page>
