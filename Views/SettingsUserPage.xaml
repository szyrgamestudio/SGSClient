<Page
    x:Class="SGSClient.Views.SettingsUserPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:helpers="using:SGSClient.Helpers" xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xaml="using:Microsoft.UI.Xaml" mc:Ignorable="d">

    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <Grid x:Name="ContentArea">
        <StackPanel>
            <StackPanel>
                <TextBlock Margin="{StaticResource SettingsPageHeaderTextBox}" Text="{Binding Source='AccountSettingsCardHeader', Converter={StaticResource L}, Mode=OneWay}" />
            </StackPanel>

            <labs:SettingsExpander
                Description="{Binding Source='Change account settings', Converter={StaticResource L}, Mode=OneWay}"
                Header="{Binding Source='AccountSettingsCardHeader', Converter={StaticResource L}, Mode=OneWay}"
                IsExpanded="True">
                <TextBlock
                    Margin="0,-2,0,0"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True" />
                <labs:SettingsExpander.Items>
                    <labs:SettingsCard
                        x:Name="accountResetPasswd"
                        Description="{Binding Source='Change account settings', Converter={StaticResource L}, Mode=OneWay}"
                        Header="{Binding Source='PasswordReset', Converter={StaticResource L}, Mode=OneWay}">
                        <Button
                            x:Name="resetPasswdButton" Click="ChangePasswordButton_Click"
                            Content="{Binding Source='Change password', Converter={StaticResource L}, Mode=OneWay}"
                            Style="{StaticResource AccentButtonStyle}" />
                    </labs:SettingsCard>
                    <labs:SettingsCard
                        x:Name="accountSettings"
                        Description="{Binding Source='Manage account session', Converter={StaticResource L}, Mode=OneWay}"
                        Header="{Binding Source='Logout', Converter={StaticResource L}, Mode=OneWay}">
                        <Button
                            x:Name="accountButton" Click="LogoutButton_Click"
                            Content="{Binding Source='Logout', Converter={StaticResource L}, Mode=OneWay}"
                            Style="{StaticResource AccentButtonStyle}" />
                    </labs:SettingsCard>
                </labs:SettingsExpander.Items>
            </labs:SettingsExpander>
        </StackPanel>
    </Grid>
</Page>
